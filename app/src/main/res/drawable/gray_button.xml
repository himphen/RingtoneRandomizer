<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E8E8E8"/>

            <stroke android:width="1dp" android:color="#A6A6A6"/>

            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="#A6A6A6" android:startColor="#E8E8E8"/>

            <stroke android:width="1dp" android:color="#A6A6A6"/>

            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp"/>
        </shape>
    </item>

</selector>